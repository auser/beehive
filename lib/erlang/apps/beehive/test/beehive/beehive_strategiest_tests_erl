-module (beehive_strategiest_tests_erl).
-include_lib("eunit/include/eunit.hrl").

setup() ->
  ok.
  
teardown(_X) ->
  ok.

starting_test_() ->
  {spawn,
    {setup,
      fun setup/0,
      fun teardown/1,
      [
        fun random_test/0,
        fun least_loaded_test/0
      ]
    }
  }.

random_test() ->
  List = [1,2,3,4,5,b,c,d,a],
  Out = beehive_strategies:random(List),
  ?assert(lists:member(Out, List)),
  passed.
  
least_loaded_test() ->
  List = [
    #bee{id={"chacha", {127,0,0,1}, 9001}},
    #bee{id={"meringue", {127,0,0,1}, 9002}},
    #bee{id={"keylime", {127,0,0,1}, 9003}}
  ],
  Out = beehive_strategies:least_loaded(List),
  ?assert(lists:member(Out, List)),
  passed.